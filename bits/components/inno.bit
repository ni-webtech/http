/*
    inno.bit - InnoSetup component for Bit
 */

let search = []
for each (drive in (FileSystem.drives() - ['A', 'B'])) {
    search += Path(drive + ':/').glob('/Program Files*/Inno Setup*')
}
Bit.load({components: { inno: { path: probe('iscc.exe', {fullpath: true, search: search.sort().reverse()})}}})
